<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.school.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/viewPagers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></android.support.v4.view.ViewPager>


            <LinearLayout
                android:paddingTop="20px"
                android:background="#e9e5e5"
                android:layout_width="match_parent"
                android:layout_height="170px"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/f1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_btn_img"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:src="@drawable/mapactived" />

                        <TextView
                            android:textColor="@color/colorAccent"
                            android:id="@+id/home_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="校园"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/f2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/blog_btn_img"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:src="@drawable/note" />

                        <TextView

                            android:id="@+id/blog_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="动态"
                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/f3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/chat_btn_img"

                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:src="@drawable/chat" />

                        <TextView

                            android:id="@+id/chat_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消息"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/f4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/mine_btn_img"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:src="@drawable/me" />

                        <TextView

                            android:id="@+id/mine_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我"
                            />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


</LinearLayout>
